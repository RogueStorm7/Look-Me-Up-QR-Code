	width : 100,
	height : 100
});

function makeCode () {		
	var elText = window.location.href;
	console.log(elText)

	if (!elText) {
		alert("Input a text");
		elText.focus();
		return;
	}
	
	qrcode.makeCode(elText);
}

makeCode();

$("#text").
	on("blur", function () {
		makeCode();
	}).
	on("keydown", function (e) {
		if (e.keyCode == 13) {
			makeCode();
		}
	});
